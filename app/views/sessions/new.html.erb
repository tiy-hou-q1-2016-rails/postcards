<div class="container">

  <h1>Sign in!</h1>

  <%= form_tag do %>

    <div class="form-group">
      <%= label_tag :email %>
      <%= email_field_tag :email, "", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password, "", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= submit_tag "Sign in", class: "btn btn-lg btn-primary" %>

      or

      <%= link_to 'Sign up', sign_up_path %>
    </div>
  <% end %>

</div>
